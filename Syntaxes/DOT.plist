{
   name = "Graphviz (DOT)";
   scopeName = "source.dot";
   
   // r3 (2005jan20, 2005jan21)
   // - new naming-scheme, thanks to Chris Thomas.
   // - added { to smart-typing, not sure why i didnt
   //   do this from begining on
   //   
   // r2 (2004dec09)
   // - changed version numbering to revisisions
   // 
   // r1 (version 1.1) (2004nov29)
   // - better color for comments
   // 
   // r0 (version 1.0) (unknown)
   // - initial build
   
   
   fileTypes = ( dot );
   
	uuid = "1A53D54E-6B1D-11D9-A006-000D93589AF6";
   
   foldingStartMarker = "\\{";
   foldingStopMarker  = "\\}";
   
   increaseIndentPattern = "^\\s*\\{";
   
   smartTypingPairs = (
      ( "[", "]" ), ( "\"", "\"" ), ( "{", "}" ), ( "<", ">" )
   );
   
   highlightPairs = (
      ( "[", "]" ), ( "{", "}" ), ( "<", ">" )
   );
   
   foregroundColor = "#eeeeee";
   backgroundColor = "#181818";
   
   patterns = (
      { name = "keyword.dot";
         foregroundColor = "#05e0e0";
         match = "\\<(node|edge|graph|digraph|subgraph|strict)\\>";
      },
      
      { name = "keyword.node-attributes.dot";
         foregroundColor = "#cccc33";
         match =  "\\<(bottomlabel|color|comment|distortion|fillcolor|fixedsize|fontcolor|fontname|fontsize|group|height|label|layer|orientation|peripheries|regular|shape|shapefile|sides|skew|style|toplabel|URL|width|z)\\>";
      },
      
      { name = "keyword.edge-attributes.dot";
         foregroundColor = "#cccc33";
         match =  "\\<(arrowhead|arrowsize|arrowtail|color|comment|constraint|decorate|dir|fontcolor|fontname|fontsize|headlabel|headport|headURL|label|labelangle|labeldistance|labelfloat|labelcolor|labelfontname|labelfontsize|layer|lhead|ltail|minlen|samehead|sametail|style|taillabel|tailport|tailURL|weight)\\>";
      },
      
      { name = "keyword.graph-attributes.dot";
         foregroundColor = "#cccc33";
         match =  "\\<(bgcolor|center|clusterrank|color|comment|compound|concentrate|fillcolor|fontname|fontpath|fontsize|label|labeljust|labelloc|layers|margin|mclimit|nodesep|nslimit|nslimit1|ordering|orientation|page|pagedir|quantum|rank|rankdir|ranksep|ratio|remincross|rotate|samplepoints|searchsize|size|style|URL)\\>";
      },
      
      { name = "keyword.constructs.dot";
/*         foregroundColor = "#a072d0";*/
         foregroundColor = "#9fd8d8";
         match = "\\{|\\}|\\[|\\]|->|--";
      },
      
      { name = "string.double-quoted.dot";
         begin = "\"";
         end = "\"";
         swallow = "\\\\.";
         foregroundColor = "#b4f00a";
      },
      
      { name = "comment.line.dot";
         match = "(#|//).*$";
         foregroundColor = "#808080";
         fontStyle = ( italic );
      },
      
      { name = "comment.block.dot";
         begin = "/\\*";
         end = "\\*/"; 
         foregroundColor = "#808080";
         fontStyle = ( italic );
      },
      
   );
   
}
